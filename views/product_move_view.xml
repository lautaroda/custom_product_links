<!-- views/product_move_view.xml -->
<odoo>
    <record id="view_stock_move_form_inherited" model="ir.ui.view">
        <field name="name">stock.move.form.inherited</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="related_document_link" readonly="1">
                    <a href="object.related_document_link" target="_blank">
                        Abrir Documento Relacionado
                    </a>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
